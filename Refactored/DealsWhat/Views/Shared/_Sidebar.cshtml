<div class="sidebar-box">
    <h5>Suggested For You</h5>
    <ul class="thumb-list">
        @foreach (var deal in Model.Deals)
        {
            
            <li>
                <div class="row product-thumb">
                    <div class="col-md-4">
                        <a href="@deal.CanonicalUrl">
                            <img width="100%" src="@deal.Thumbnails.FirstOrDefault().RelativeUrl" alt="Image Alternative text"/>
                        </a>
                    </div>
                    <div class="col-md-8">
                        <a href="@deal.CanonicalUrl"><h5 class="product-title">@deal.ShortTitle</h5></a>
                        <p class="product-price">RM @deal.SpecialPrice</p>
                    </div>
                </div>
            </li>

        }
    </ul>
