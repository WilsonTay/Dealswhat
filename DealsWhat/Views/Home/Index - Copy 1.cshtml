@{
    int i = 0;
    foreach (var deal in Model.NewDeals)
    {
        if (i % 3 == 0)
        {
    @Html.Raw("<div class=\"row row-wrap\">")
        }
    <a class="col-md-4" href="@Url.Action("Index", "Deal", new { id = deal.CanonicalUrl })">
        <div class="product-thumb">
            <header class="product-header">
                <img src="/Content/img/800x600.png" />
            </header>
            <div class="product-inner">
                <h5 class="product-title">@deal.ShortTitle</h5>
                <p class="product-desciption">@deal.Merchant.Name</p>
                <div class="product-meta">
                    <span class="product-time"><i class="fa fa-clock-o"></i>&nbsp;10 days 23 h remaining</span>
                    <ul class="product-price-list">
                        <li><span class="product-price">$@deal.SpecialPrice</span>
                        </li>
                        <li><span class="product-old-price">$@deal.RegularPrice</span>
                        </li>
                        <li><span class="product-save">Save @((deal.RegularPrice - deal.SpecialPrice) * 100 / deal.RegularPrice)%</span>
                        </li>
                    </ul>
                </div>
                <p class="product-location"><i class="fa fa-map-marker"></i>Selangor</p>
            </div>
        </div>
    </a>

        if ((i + 1) % 3 == 0)
        {
    @Html.Raw("</div>")
        }
        i++;
    }
}
